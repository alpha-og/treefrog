{
  "name": "treefrog-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Treefrog - LaTeX compilation made easy",
  "packageManager": "pnpm@9.15.0",
  "type": "module",
  "scripts": {
    "dev": "tsx scripts/dev/start.ts",
    "dev:desktop-local": "tsx scripts/dev/start.ts desktop-local",
    "dev:desktop-remote": "tsx scripts/dev/start.ts desktop-remote",
    "dev:website-compiler": "tsx scripts/dev/start.ts website-compiler",
    "dev:full": "tsx scripts/dev/start.ts full",
    "dev:compiler": "tsx scripts/dev/start.ts compiler-only",
    "dev:local": "tsx scripts/dev/start.ts local-only",
    "dev:website": "tsx scripts/dev/start.ts website-only",
    "dev:desktop": "tsx scripts/dev/start.ts desktop-only",
    "dev:stop": "tsx scripts/dev/stop.ts",
    "dev:stop:all": "tsx scripts/dev/stop.ts --all",
    "dev:status": "tsx scripts/dev/status.ts",
    "dev:logs": "tsx scripts/dev/logs.ts",
    "dev:logs:desktop": "tsx scripts/dev/logs.ts desktop",
    "dev:logs:website": "tsx scripts/dev/logs.ts website",
    "dev:logs:local": "tsx scripts/dev/logs.ts local-compiler",
    "dev:logs:remote": "tsx scripts/dev/logs.ts remote-compiler",
    "build": "tsx scripts/build/desktop.ts",
    "build:all": "tsx scripts/build/desktop.ts --all-platforms",
    "build:docker": "tsx scripts/build/docker.ts",
    "build:docker:local": "tsx scripts/build/docker.ts local-compiler",
    "build:docker:remote": "tsx scripts/build/docker.ts remote-compiler",
    "build:docker:all": "tsx scripts/build/docker.ts --all",
    "build:docker:local:only": "tsx scripts/build/docker.ts local-compiler --build-only",
    "build:docker:remote:only": "tsx scripts/build/docker.ts remote-compiler --build-only",
    "build:backend": "tsx scripts/build/backend.ts",
    "build:cli": "tsx scripts/build/cli.ts",
    "prod": "tsx scripts/prod/start.ts",
    "prod:compiler": "tsx scripts/prod/start.ts compiler",
    "prod:stop": "tsx scripts/prod/stop.ts",
    "prod:logs": "tsx scripts/prod/logs.ts",
    "test": "pnpm test:backend && pnpm test:frontend",
    "test:backend": "cd apps/remote-latex-compiler && go test ./... -v -race -coverprofile=coverage.out",
    "test:backend:verbose": "cd apps/remote-latex-compiler && go test ./... -v -race -coverprofile=coverage.out -covermode=atomic",
    "test:frontend": "cd apps/desktop/frontend && pnpm test",
    "lint": "pnpm lint:backend && pnpm lint:frontend",
    "lint:backend": "cd apps/remote-latex-compiler && golangci-lint run --timeout=5m",
    "lint:frontend": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "fmt": "pnpm fmt:backend && pnpm fmt:frontend",
    "fmt:backend": "go fmt ./...",
    "fmt:frontend": "pnpm -r format",
    "clean": "tsx scripts/clean.ts",
    "clean:all": "tsx scripts/clean.ts --deep",
    "doctor": "tsx scripts/doctor.ts",
    "env:setup": "cp apps/remote-latex-compiler/.env.example apps/remote-latex-compiler/.env.local && echo 'Edit apps/remote-latex-compiler/.env.local with your secrets'",
    "env:check": "tsx scripts/env-check.ts"
  },
  "keywords": [
    "latex",
    "editor",
    "compiler",
    "desktop-app"
  ],
  "author": "Athul Anoop",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^22.0.0",
    "chalk": "^5.3.0",
    "concurrently": "^9.1.0",
    "execa": "^9.5.0",
    "tsx": "^4.19.0"
  }
}
